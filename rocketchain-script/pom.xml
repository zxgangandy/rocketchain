    <artifactId>rocketchain-script</artifactId>


    <dependencies>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>

        <dependency>
            <groupId>org.rocketchain</groupId>
            <artifactId>rocketchain-utils</artifactId>
